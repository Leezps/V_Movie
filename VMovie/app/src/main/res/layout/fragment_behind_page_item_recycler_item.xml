<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_behind_page_item_recycler_item_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/fragment_behind_page_item_recycler_item_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:background="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_behind_page_item_recycler_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="【电影自习室】 番外篇-导演十步调度法 上海温哥华电影学院"
            android:textSize="13sp"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/black_share_icon"/>

            <TextView
                android:id="@+id/fragment_behind_page_item_recycler_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textSize="12sp"
                android:textColor="@color/colorGray_9"/>
            
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginLeft="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/side_likes"/>

            <TextView
                android:id="@+id/fragment_behind_page_item_recycler_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textSize="12sp"
                android:textColor="@color/colorGray_9"/>

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>