<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_series_content_item_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorBlack">

        <ImageView
            android:id="@+id/activity_series_content_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/activity_series_content_item_playing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="正在播放"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAlpha_3"/>

        <TextView
            android:id="@+id/activity_series_content_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="17:29"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_series_content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="第85集：番外篇-绿幕搭建和拍摄技巧 上海温哥华电影学院"
            android:textSize="15sp"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/activity_series_content_item_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2016.06.28"
            android:textSize="12sp"
            android:textColor="@color/colorGray_9"/>

    </LinearLayout>

</LinearLayout>